{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    },
    "types": [
      "./types",
      "@nuxt/types",
      "@types/node",
      "@types/webpack-env",
      "@nuxtjs/axios",
      "@nuxtjs/vuetify"
    ],
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "globals": {
    "it": false,
    "expect": false
  },
  "allowSyntheticDefaultImports": true
}
